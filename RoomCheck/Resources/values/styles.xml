<?xml version="1.0" encoding="utf-8" ?>
<resources>
<style name="MyTheme.Base" parent="@android:style/Theme.Material.Light">
</style>

<style name="MyTheme" parent="MyTheme.Base">
   <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">#777777</item>
</style>

<style name="MyTheme.Splash" parent ="@android:style/Theme.Material.Light">
  <item name="android:windowBackground">@drawable/splash</item>
  <item name="android:windowNoTitle">true</item>
</style>

  <style name="dialog_animation">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_right</item>
  </style>
  
</resources>